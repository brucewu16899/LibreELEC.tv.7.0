@@ -1123,6 +1123,18 @@
 		fe0_dev = <0>;
 	};
 */
+
+        meson-ir {
+                compatible = "amlogic, meson6-ir";
+                reg = <0x0 0xc8100580 0x0 0x20>;
+                interrupts = <0 196 1>;
+                pinctrl-names = "default";
+                pinctrl-0 = <&remote_pins>;
+                pulse-inverted;
+                status = "ok";
+        };
+
+
 };
 &i2c_a {
   status = "okay";
